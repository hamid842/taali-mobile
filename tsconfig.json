{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": ["app/*"],
      "@components/*": ["components/*"],
      "@contexts/*": ["contexts/*"],
      "@lib/*": ["lib/*"],
      "@hooks/*": ["hooks/*"],
      "@appTypes/*": ["app-data-types/*"],
      "@locales/*": ["locales/*"],
      "@services/*": ["services/*"],
      "@appUtils/*": ["app-utils/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "nativewind-env.d.ts"]
}
